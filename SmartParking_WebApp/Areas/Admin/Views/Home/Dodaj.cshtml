@model DodajParkingVM
@{
    ViewData["Title"] = "Dodaj";
}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Forma</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <section class="content">
        <div class="row">
            <div class="col-8">

                <div class="card card-info ">
                    <div class="card-header ">
                        <h3 class="card-title">Dodaj novi parking</h3>
                    </div>

                    <form asp-action="Dodaj" enctype="multipart/form-data" method="post" class="form-horizontal">
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Naziv:</label>
                                <div class="col-sm-10">
                                    <input asp-for="@Model.Naziv" placeholder="Upišite naziv" class="form-control" />
                                    <span asp-validation-for="Naziv" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Adresa:</label>
                                <div class="col-sm-10">
                                    <input asp-for="@Model.Adresa" placeholder="Upišite adresu" class="form-control" />
                                    <span asp-validation-for="Adresa" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Poštanski broj:</label>
                                <div class="col-sm-10">
                                    <input asp-for="@Model.Zip" placeholder="Upišite poštanski broj" class="form-control" />
                                    <span asp-validation-for="Zip" class="text-danger"></span>
                                </div>
                            </div>
                            
                            
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Longitude:</label>
                                <div class="col-sm-2">
                                    <input asp-for="@Model.longitude" class="form-control" />
                                    <span asp-validation-for="longitude" class="text-danger"></span>
                                </div>
                                <div class="col-sm-1"></div>
                                <label class="col-sm-2 col-form-label">Latitude:</label>
                                <div class="col-sm-2">
                                    <input asp-for="@Model.Latitude" class="form-control" />
                                    <span asp-validation-for="Latitude" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Broj mjesta:</label>
                                <div class="col-sm-2">
                                    <input asp-for="@Model.BrojMjesta" type="number" value="1" class="form-control" />
                                    <span asp-validation-for="BrojMjesta" class="text-danger"></span>
                                </div>
                                <div class="col-sm-1"></div>

                                <label class="col-sm-2 col-form-label">Broj mjesta OSI:</label>
                                <div class="col-sm-2">
                                    <input asp-for="@Model.BrojMjesta_OSI" type="number" value="1" class="form-control" />
                                    <span asp-validation-for="BrojMjesta_OSI" class="text-danger"></span>
                                </div>

                            </div>
                            
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Oznaka za parking mjesta:</label>
                                <div class="col-sm-2">
                                    <input asp-for="@Model.OznakaZaMjesta" placeholder="A, B, C,..." class="form-control" />
                                    <span asp-validation-for="OznakaZaMjesta" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="offset-sm-2 col-sm-3">
                                    <div class="form-check"></div>
                                    <input asp-for="@Model.Dostupan" type="checkbox"  class="form-check-input"/>
                                    <label class="form-check-label">Dostupan</label>

                                </div>
                            </div>
                        </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-info">Snimi</button>

                            </div>
                      

                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
